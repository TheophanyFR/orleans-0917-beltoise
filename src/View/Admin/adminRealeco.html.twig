{% include 'Admin/adminHeader.html.twig' %}
<section>
    <h2>Image de fond Réalisation</h2>
    {% if uploadErrors %}
        <ul class="alert alert-danger">
            {% for uploadError in uploadErrors %}
                <li>{{ uploadError }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <form action="?route=adminImageFondRealisation" method="post" enctype="multipart/form-data">
                <label name="upload">Photo à modifier :</label>
                <input type="file" name="upload">
                <input type="submit" value="Envoyer" name="submit">
            </form>
        </div>
    </div>
    <img src="assets/uploads/imageFondRealisation.jpg" alt="Actuelle image de fond Réalisation">
</section>
<section>
    <h2>Réalisation écologique</h2>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <form action="?route=adminRealEco" method="post" enctype="multipart/form-data">
                <fieldset>
                    <legend>Ajouter une réalisation:</legend>
                    <label for="titre">Titre :</label>
                    <input type="text" name="titre" id="titre" placeholder="Entrez le titre" value=""
                           class="form-control"/>
                    <label for="texte">Texte :</label>
                    <textarea name="texte" id="texte" class="form-control"></textarea>
                    <label name="upload">Photo à modifier :</label>
                    <input type="file" name="upload">
                    <input type="submit" value="Envoyer" name="submit">
                </fieldset>
            </form>
        </div>
    </div>

    <div class="row">
        {% for realEco in realEcos %}
            <div class="col-md-2 ">
                <figure class="thumbnail center-block">
                    <h3>{{ realEco.titre }}</h3>
                    <img src="assets/uploads/{{ realEco.image }}" class="img-responsive">
                    <figcaption>{{ realEco.texte }}</figcaption>
                </figure>
                <form action="?route=deleteRealEco" method="post">
                    <input type="hidden" name="id" value="{{ realEco.id }}"/>
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        {% endfor %}
    </div>
</section>