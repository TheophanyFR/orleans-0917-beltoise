{% include 'Admin/adminHeader.html.twig' %}
<section>
    <h2>Image d'accueil</h2>
    {% if uploadErrors %}
        <ul class="alert alert-danger">
            {% for uploadError in uploadErrors %}
                <li>{{ uploadError }}</li>
            {% endfor %}
        </ul>
    {% endif %}


    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <form action="?route=adminImageAccueil" method="post" enctype="multipart/form-data">
                Select image to upload:
                <input type="file" name="upload">
                <input type="submit" value="Envoyer" name="submit">
            </form>
        </div>
    </div>
    <img src="assets/uploads/imageAccueil.jpg" alt="Actuelle image d'accueil">
</section>
