    <div class="section-content">
        <div class="row">
            {% for renovation in renovations %}
                <div class="col-md-5">
                    <figure class="thumbnail center-block">
                        <h3>{{ renovation.title }}</h3>
                        <div class="col-md-5 col-md-offset-1">
                            <img src="assets/uploads/{{ renovation.imageBefore }}" class="img-responsive">
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            <img src="assets/uploads/{{ renovation.imageAfter }}" class="img-responsive">
                        </div>
                        <figcaption class="text-center">{{ renovation.text }}</figcaption>
                        <form action="?route=deleteRenovation" method="post">
                            <input type="hidden" name="id" value="{{ renovation.id }}"/>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </figure>
                </div>
            {% endfor %}
        </div>
    </div>
</section>