{% include 'Admin/adminHeader.html.twig' %}

<section>
    <h2>Certifications</h2>

    {% if uploadErrors %}
        <ul class="alert alert-danger">
            {% for uploadError in uploadErrors %}
                <li>{{ uploadError }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <form action="?route=adminCertifications" method="post" enctype="multipart/form-data">
                Select image to upload:
                <input type="file" name="upload">
                <input type="submit" value="Envoyer" name="submit">
            </form>
        </div>
    </div>
    <div class="row">
        {% for certification in certifications %}
            <div class="col-md-2">
                <figure class="thumbnail center-block">
                    <img src="assets/uploads/{{ certification.name }}" class="img-responsive">
                </figure>
                <form action="?route=deleteCertification" method="post">
                    <input type="hidden" name="id" value="{{ certification.id }}"/>
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        {% endfor %}
    </div>
</section>

{% include 'Admin/adminFooter.html.twig' %}