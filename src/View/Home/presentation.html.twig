<span id="anchorPresentation" class="anchor"></span>
<section>
    <div class="section-content">
        <h2 class="presentation-title">Beltoise & Fils</h2>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 presentation-text">
                <p class="text-center">
                    {% for presentationAccueil in presentationAccueils %}
                        {{ presentationAccueil.texte | raw}}
                    {% endfor %}
                </p>
            </div>
        </div>
        <div class="row hidden-xs">
            <ul class="image-list">
                {% for logo in logos %}
                    <div class="logo-certif col-xs-4">
                        <li><img class="img-responsive" src="assets/uploads/{{ logo.name }}" alt="Certification"></li>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>
